#!/bin/sh

set -e

if test "$1" = "remove"; then
    if which update-binfmts >/dev/null; then
        update-binfmts --package llvm-11-runtime \
            --remove llvm-11-runtime.binfmt /usr/bin/lli-11 || true
        if test -f /var/lib/binfmts/llvm-11.binfmt; then
            # Purge old file
            update-binfmts --package llvm-11-runtime \
                --remove llvm-11.binfmt /usr/bin/lli-11 || true
        fi
    fi
fi



